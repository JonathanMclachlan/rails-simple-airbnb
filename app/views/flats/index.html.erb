<%= render "shared/header" %>
<br>
<div class="container">
  <h1>All our flats (<%= @flats.length %>) </h1>
  <div class="d-flex  p-3">
  <% @flats.each do |flat| %>
    <div class="card m-3">
    <%= link_to flat.name, flat_path(flat) %>, in <%= flat.address %>
    </div>
  <% end %>
  </div>
</div>
<br>
<%= render "shared/footer" %>
